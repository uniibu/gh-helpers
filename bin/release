#!/usr/bin/env node

const { resolve } = require('path');
require('dotenv').config({ path: resolve(__dirname, '../.env') })
const exec = require('../lib/exec');
const processor = require('../lib/processor');
const args = processor.parse(process.argv);

const publish = args[0];
const otp = args[1];
const origin = 'origin';
let branch = exec.execa.shellSync('git branch', { encoding: 'utf8' })
branch = branch.stdout.replace(/^(\* )/g, '').replace('\n', '');

if (!process.env.GITHUB_TOKEN) {
  processor.sendError('Missing Github Token. Run "gh-token xxxxx" to add your token');
}

async function release() {
  let releaseArgs = '--git.commit --git.commitArgs="-S" --git.commitMessage="Release ${version}" --github.release --git.push --git.tag --git.tagName="${version}" --git.tagAnnotation="Release ${version}" --git.tagArgs="-s" --non-interactive'
  if (publish && publish == 'publish') {
    if (otp) {
      releaseArgs += ` --npm.otp="${otp}"`
    }
    releaseArgs += ' --npm.publish'

  } else {
    releaseArgs += ' --no-npm.publish'
  }
  await exec(`npx release-it ${releaseArgs}`, true, true);
}


exec(`bin/pull ${origin} ${branch}`)
  .then(() => release())
  .then(process.exit);